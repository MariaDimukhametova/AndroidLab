<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c9d1ce"
        app:layout_constraintTop_toBottomOf="@id/user_nickname"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />


    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="#c9d1ce"
        app:layout_constraintTop_toBottomOf="@id/info" />

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#c9d1ce"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        tools:layout_editor_absoluteX="16dp" />

    <View
        android:id="@+id/line_4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/avatar3"
        android:background="#c9d1ce"
        tools:layout_editor_absoluteX="-160dp" />


    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="94dp"
        android:layout_height="98dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_1"
        tools:srcCompat="@mipmap/ic_cat1" />

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="m.dimukhametova"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_qrcode" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginTop="5dp"
        android:background="#c9d1ce"
        android:textColor="#4C75A3"
        android:text="Редактировать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_avatar" />

    <ImageButton
        android:id="@+id/btn_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_menu"
        app:layout_constraintEnd_toStartOf="@id/btn_menu"
        app:layout_constraintTop_toTopOf="@id/btn_menu"
        app:srcCompat="@drawable/ic_baseline_qr_code_24" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_menu_24" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit"
        app:srcCompat="@drawable/ic_outline_camera_alt_24" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit"
        app:srcCompat="@drawable/ic_outline_edit_24" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit"
        app:srcCompat="@drawable/ic_outline_insert_photo_24" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit"
        app:srcCompat="@drawable/ic_baseline_slow_motion_video_24" />

    <ImageView
        android:id="@+id/house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_2"
        app:srcCompat="@drawable/ic_baseline_house_24" />

    <ImageView
        android:id="@+id/image_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/house"
        app:layout_constraintTop_toBottomOf="@+id/house"
        app:srcCompat="@drawable/ic_baseline_cast_for_education_24" />

    <ImageView
        android:id="@+id/image_subscribers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/image_education"
        app:layout_constraintTop_toBottomOf="@+id/image_education"
        app:srcCompat="@drawable/ic_baseline_wifi_24" />

    <ImageView
        android:id="@+id/image_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/image_subscribers"
        app:layout_constraintTop_toBottomOf="@+id/image_subscribers"
        app:srcCompat="@drawable/ic_baseline_work_outline_24" />

    <ImageView
        android:id="@+id/image_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/image_work"
        app:layout_constraintTop_toBottomOf="@+id/image_work"
        app:srcCompat="@drawable/ic_baseline_info_24" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Город: Казань"
        app:layout_constraintStart_toEndOf="@+id/house"
        app:layout_constraintTop_toBottomOf="@+id/line_2"
        app:layout_constraintTop_toTopOf="@id/house" />

    <TextView
        android:id="@+id/education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Образование: КФУ"
        app:layout_constraintStart_toEndOf="@+id/image_education"
        app:layout_constraintStart_toStartOf="@id/city"
        app:layout_constraintTop_toBottomOf="@+id/city"
        app:layout_constraintTop_toTopOf="@id/image_education" />

    <TextView
        android:id="@+id/subscribers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150 подписчиков"
        app:layout_constraintStart_toEndOf="@+id/image_subscribers"
        app:layout_constraintStart_toStartOf="@id/education"
        app:layout_constraintTop_toBottomOf="@+id/education"
        app:layout_constraintTop_toTopOf="@id/image_subscribers" />

    <TextView
        android:id="@+id/work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Место работы: "
        android:textColor="#4C75A3"
        app:layout_constraintStart_toEndOf="@+id/image_work"
        app:layout_constraintStart_toStartOf="@id/subscribers"
        app:layout_constraintTop_toBottomOf="@+id/subscribers"
        app:layout_constraintTop_toTopOf="@id/image_work" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Подробная информация"
        android:textColor="#4C75A3"
        app:layout_constraintStart_toEndOf="@+id/image_info"
        app:layout_constraintStart_toStartOf="@id/work"
        app:layout_constraintTop_toBottomOf="@+id/work" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Мария Димухаметова"
        app:layout_constraintStart_toEndOf="@+id/image_avatar"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintTop_toTopOf="@id/image_avatar" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Статус"
        app:layout_constraintStart_toEndOf="@+id/image_avatar"
        app:layout_constraintStart_toStartOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="online"
        app:layout_constraintStart_toEndOf="@+id/image_avatar"
        app:layout_constraintStart_toStartOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/status" />

    <TextView
        android:id="@+id/friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Друзья"
        app:layout_constraintStart_toStartOf="@id/image_info"
        app:layout_constraintTop_toBottomOf="@id/line_3"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/number_of_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="350"
        app:layout_constraintStart_toEndOf="@+id/friends"
        app:layout_constraintTop_toTopOf="@id/friends"
        tools:layout_editor_absoluteY="464dp" />

    <TextView
        android:id="@+id/applications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="20 заявок"
        app:layout_constraintTop_toTopOf="@id/arrow1"
        app:layout_constraintEnd_toStartOf="@+id/arrow1"
        tools:layout_editor_absoluteY="464dp" />

    <ImageButton
        android:id="@+id/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_3"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
        tools:layout_editor_absoluteY="450dp" />

    <ImageView
        android:id="@+id/avatar1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar2"
        app:layout_constraintEnd_toStartOf="@+id/avatar2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatar2"
        tools:srcCompat="@mipmap/ic_cat2" />

    <ImageView
        android:id="@+id/avatar2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar3"
        app:layout_constraintEnd_toStartOf="@+id/avatar3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/avatar1"
        app:layout_constraintTop_toTopOf="@+id/avatar3"
        tools:srcCompat="@mipmap/ic_cat3" />

    <ImageView
        android:id="@+id/avatar3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar4"
        app:layout_constraintEnd_toStartOf="@+id/avatar4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/avatar2"
        app:layout_constraintTop_toBottomOf="@+id/line_3"
        tools:srcCompat="@mipmap/ic_cat7" />

    <ImageView
        android:id="@+id/avatar4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar5"
        app:layout_constraintEnd_toStartOf="@+id/avatar5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/avatar3"
        app:layout_constraintTop_toTopOf="@+id/avatar5"
        tools:srcCompat="@mipmap/ic_cat5" />

    <ImageView
        android:id="@+id/avatar5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/avatar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/avatar4"
        tools:layout_editor_absoluteY="508dp"
        tools:srcCompat="@mipmap/ic_cat6" />

    <TextView
        android:id="@+id/photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фотографии"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/friends"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_4"/>

    <TextView
        android:id="@+id/number_of_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintStart_toEndOf="@id/photos"
        app:layout_constraintTop_toTopOf="@id/photos"
        android:layout_marginStart="5dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="614dp" />

    <TextView
        android:id="@+id/mentions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 отметок"
        app:layout_constraintEnd_toStartOf="@id/arrow2"
        app:layout_constraintTop_toTopOf="@id/arrow2"
        android:layout_marginEnd="5dp"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="605dp" />

    <ImageButton
        android:id="@+id/arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_4"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

</android.support.constraint.ConstraintLayout>